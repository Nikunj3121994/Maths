<script>
function calculate()
{
var a = 0;
var b = 0;
var c = 0;
var d = 0;


var x = 0;
var y = 0;
var z = 0;
var w = 0;

var e = 0;
var f = 0;
var g = 0;
var h = 0;


var a =parseFloat(document.getElementById("a").value);
var b =parseFloat(document.getElementById("b").value);
var c =parseFloat(document.getElementById("c").value);
var d =parseFloat(document.getElementById("d").value);

var x =parseFloat(document.getElementById("x").value);
var y =parseFloat(document.getElementById("y").value);
var z =parseFloat(document.getElementById("z").value);
var w =parseFloat(document.getElementById("w").value);


 if(a<0||b<0 ||c<0 ||d<0 || x<0||y<0 ||z<0 ||w<0){
                 document.getElementById("warning").innerHTML = "Please enter a positive value.......";
               }
else{
                   document.getElementById("warning").innerHTML = "";
                   }

var time1 = 0;
var time2 = 0;
var time3 = 0;
time1 = (86400*a)+(3600*b)+(60*c)+d;
time2 = (86400*x)+(3600*y)+(60*z)+w;


for(var i=0;i<unitinput.options.length;i++)
    {
	  if(unitinput.options[i].selected) unitinputid = i;
    }


	
if(unitinputid == 0){
time3 = time1+time2;
}else if(unitinputid == 1){
time3 = time1-time2;
}

//divide total time
//second
h = time3%60;
time3 =time3 - h;
time3 = time3/60;

//minute
g = time3%60;
time3 =time3 - g;
time3 = time3/60;

//hour
f = time3%24;
time3 =time3 - f;
time3 = time3/24;

//day
e = time3;

	
document.getElementById('e').value = e;
document.getElementById('f').value = f;
document.getElementById('g').value = g;
document.getElementById('h').value = h;
	
}


</script>
